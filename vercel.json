{
  "version": 2,
  "builds": [
    {
      "src": "api/server.ts", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "routes/**/*", 
          "middleware/**/*",
          "config/**/*",
          ".env" 
        ]
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/server.ts" 
    }
  ]
}